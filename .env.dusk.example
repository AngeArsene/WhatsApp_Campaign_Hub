APP_NAME=Laravel
APP_ENV=dusk
APP_KEY=base64:SomeRandomGeneratedKeyHere=
APP_DEBUG=true
APP_URL=http://localhost

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Database (use SQLite in-memory for isolated tests)
DB_CONNECTION=sqlite
DB_DATABASE=:memory:
DB_FOREIGN_KEYS=true

# Cache & Session (use array to avoid external services)
CACHE_DRIVER=array
SESSION_DRIVER=array
QUEUE_CONNECTION=sync

# Mail (disable real emails)
MAIL_MAILER=array

# Filesystem
FILESYSTEM_DISK=local

# Broadcasting (not needed for Dusk tests, fallback to log)
BROADCAST_DRIVER=log

# Optional (for apps using Sanctum or session domains)
# SANCTUM_STATEFUL_DOMAINS=localhost
# SESSION_DOMAIN=localhost
